{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group mb-0">
                <div class="card p-4">
                    <div class="card-block">
                        <h1>Parolamı Unuttum?</h1>
                        <p class="text-muted">Hesabınıza tekrar erişim sağlamak için lütfen kayıt olduğunuz e-posta adresini giriniz.</p>
                        <form method="POST" action="{{ path('fos_user_resetting_send_email') }}" class="fos_user_resetting_request">
                            <div class="input-group mb-3"><span class="input-group-addon"><i class="icon-user"></i></span>
                                <input type="email" placeholder="E-Posta Adresi" required class="form-control" name="username">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-4">Sıfırlama Bağlantısını Gönder</button>
                                </div>
                                <div class="col-6 text-right"><a href="{{ path("fos_user_security_login") }}" class="btn btn-link px-0">Giriş Yap</a></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}